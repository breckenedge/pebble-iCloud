# Production Environment Configuration
# Copy this file to .env and fill in the values

# Flask Environment
FLASK_ENV=production

# Database
# This will be automatically set by Railway/Heroku
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret Key
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your_secure_random_secret_key_here_change_me

# Encryption Key for Apple Passwords
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key_here_change_me

# Server Port (will be set by Railway/Heroku automatically)
PORT=8080
